<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/six_dp"
    app:cardElevation="@dimen/two_dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp">

        <ImageView
            android:id="@+id/item_list_client_img_person"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/four_dp"
            android:src="@drawable/ic_person_green"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/item_list_client_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_list_client_img_person"
            android:paddingTop="@dimen/eight_dp"
            android:text="Jeremy Mathias Amadeus"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:id="@+id/item_list_client_img_car"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/item_list_client_img_person"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/four_dp"
            android:src="@drawable/ic_directions_car_yellow"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/item_list_client_txt_plaque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_list_client_txt_name"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_toEndOf="@+id/item_list_client_img_car"
            android:text="WUK-872"
            android:textSize="@dimen/big_font_size" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>